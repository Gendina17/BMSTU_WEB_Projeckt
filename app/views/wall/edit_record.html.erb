<body class="wall">
<div  class ="sign_form">
  <% if @edit_record %>
  <% if @edit_record.errors.any? %>
    <div id="error_explanation">
      <h2> <%=t 'from_being_saved'%> </h2>
      <ul>
        <% @edit_record.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <% end %>
  <%=  form_with(model:@edit_record,  local: true, url: wall_update_path(id: @edit_record.id), :class => 'form-signin') do |form|%>
    <h1 class="vb"><%=t 'change_rec'%></h1><br/>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= form.text_field :title, :class => 'form-control inp',:placeholder => t('title_rec')%>
    <%= form.text_area :body, :class => 'form-control inp' ,:placeholder => t('thinks') %>
    <div class="form-control inp" > <%= form.select :status, [t('tag_one'), t('tag_two'), t('tag_tree')] , :class => 'form-control inp' %> </div>
    <%= form.submit t('edit_link'), :class => 'btn btn-outline-secondary'   %>
    <span class="link_to_sign"><%=t 'rethink'%></span>
    <%= link_to t('back_rec'), "/#{I18n.locale}/records/#{@_current.id}" %>
    <br><br>
  <% end %>
</div>
</body>